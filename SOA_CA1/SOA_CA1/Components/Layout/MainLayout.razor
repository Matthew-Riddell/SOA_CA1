@inherits LayoutComponentBase

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Matt's Entertainment</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <NavLink class="nav-link active" href="/">
                        <i class="bi bi-house-door-fill"></i> Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/steam-games">
                        <i class="bi bi-controller"></i> Steam Games
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/movie-search">
                        <i class="bi bi-film"></i> Movie Search
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/upload-movie">
                        <i class="bi bi-upload"></i> Upload Movie
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Layout structure with content -->
<div class="page" style="padding-top: 56px;">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<!-- Script for Bootstrap's JavaScript and Popper.js functionality -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
